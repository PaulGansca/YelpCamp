<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to YelpCamp</h1>
        <p>View our handpicked campgrounds from Romania</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
        </p>
        </div>
    </header>
    
    <div class="row text-center card-deck" style="display:flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="card">
                        <img class="card-img-top" alt="Card image cap" src="<%=campground.image%>"></img>
                        <div class="card-body">
                            <h4 class=card-title><%= campground.name %></h4>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                        </div>
                    </div>
                </div>
            <% }); %>
    </div>
    
    
</div>
<% include ../partials/footer %>